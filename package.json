{
  "name": "directus-cli-tool",
  "version": "0.1.0",
  "description": "CLI tool per interagire con Directus API con menu interattivi e autenticazione JWT",
  "type": "module",
  "bin": {
    "directus-cli": "dist/cli.js"
  },
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/cli.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "directus",
    "cli",
    "api",
    "interactive"
  ],
  "author": "lorenigniCloud",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "inquirer": "^9.2.12",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "axios": "^1.6.0",
    "ora": "^7.0.1",
    "boxen": "^7.1.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
